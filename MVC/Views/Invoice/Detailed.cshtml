@model DetailedInvoiceViewModel

@{
    ViewData["Title"] = $"Faktura #{Model.InvoiceId}";
}

<div class="container mt-5">
    <div class="bg-light p-5 border rounded">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-0">Faktura</h1>
                <p class="lead text-muted">Faktura #@Model.InvoiceId</p>
            </div>
            <div class="d-flex">
                <button class="btn btn-success me-2">
                    <i class="bi bi-currency-dollar"></i>
                    Betal
                </button>
                <form asp-controller="Invoice" asp-action="Download" method="post">
                    <input type="hidden" name="id" value="@Model.InvoiceId" />
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-download me-1"></i>
                        Download
                    </button>
                </form>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <h2 class="h5 mb-3">Kundeinformation</h2>
                <dl class="row">
                    <dt class="col-sm-4">Navn</dt>
                    <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                    <dt class="col-sm-4">Adresse</dt>
                    <dd class="col-sm-8">@Model.Address</dd>

                    <dt class="col-sm-4">By</dt>
                    <dd class="col-sm-8">@Model.City, @Model.ZipCode</dd>

                    <dt class="col-sm-4">Telefon</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>

                    <dt class="col-sm-4">E-mail</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">CPR</dt>
                    <dd class="col-sm-8">@Model.CPR</dd>

                    <dt class="col-sm-4">Kundenummer</dt>
                    <dd class="col-sm-8">@Model.ConsumerId</dd>
                </dl>
            </div>

            <div class="col-md-6">
                <h2 class="h5 mb-3">Fakturaoplysninger</h2>
                <dl class="row">
                    <dt class="col-sm-4">Faktureringsperiode</dt>
                    <dd class="col-sm-8">@Model.BillingPeriodStart.ToString("dd/MM-yyyy") - @Model.BillingPeriodEnd.ToString("dd/MM-yyyy")</dd>

                    <dt class="col-sm-4">Total forbrug</dt>
                    <dd class="col-sm-8">@Model.TotalConsumption kWh</dd>

                    <dt class="col-sm-4">Betalt</dt>
                    <dd class="col-sm-8">
                        <span class="@(Model.PaidStatus == "Ja" ? "text-success" : "text-danger")">@Model.PaidStatus</span>
                    </dd>
                </dl>
            </div>
        </div>

        <div class="mt-5">
            <h2 class="h4 mb-3">Periode data</h2>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Periode Start</th>
                            <th>Periode Slut</th>
                            <th>Forbrug (kWh)</th>
                            <th>Beløb (DKK)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.PeriodData != null && Model.PeriodData.Any())
                        {
                            @foreach (var period in Model.PeriodData)
                            {
                                <tr>
                                    <td>@period.PeriodStart.ToString("dd/MM-yyyy")</td>
                                    <td>@period.PeriodEnd.ToString("dd/MM-yyyy")</td>
                                    <td>@period.Consumption</td>
                                    <td>@period.Cost</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">Ingen periodedata fundet.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-5">
            <h4 class="font-weight-bold">Total: @Model.TotalAmount kr</h4>
        </div>

        <div class="mt-4 text-muted small">
            <p>
                Prisdata er hentet fra
                <a href="https://stromligning.dk/api/" target="_blank">https://stromligning.dk/api/</a>.
                Forbrugsdata er autogenereret.
            </p>
        </div>
    </div>
</div>